@model ProjektniZadatak.Models.Prijem

@{
    ViewData["Title"] = "Create";
}

<script type="text/javascript" src="~/js/Prijem.js"></script>


<h1>Dodaj novi prijem</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Broj zdravstvene knjižice pacijenta</label>
                <input type="text" onkeyup="showPacijent(this.value)" class="form-control"/>
                <input type="hidden" asp-for="PacijentID" id="inputPacijentID" />
                <span id="txtPacijent"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumVrijemePrijema" class="control-label"></label>
                <input asp-for="DatumVrijemePrijema" class="form-control" />
                <span asp-validation-for="DatumVrijemePrijema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Šifra ljekara</label>
                <input type="text" onkeyup="showLjekar(this.value)" class="form-control" />
                <p class="text-danger" id="parErrorLjekar">@ViewBag.ErrorSpecijalista</p>
                <input type="hidden" asp-for="LjekarID" id="inputLjekarID" />
                <span id="txtLjekar"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HitniPrijem" /> @Html.DisplayNameFor(model => model.HitniPrijem)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
