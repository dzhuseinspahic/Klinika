@model ProjektniZadatak.Models.Nalaz

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Nalaz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <textarea asp-for="Opis" class="form-control" rows="4"> </textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PrijemID" value="@Model.PrijemID"/>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model?.ID">Detalji o nalazu</a> |
    <a asp-action="Details" asp-controller="Prijem" asp-route-id="@Model?.PrijemID">Detalji o prijemu</a>
    <!--<a asp-action="Index">Vrati se nazad na listu</a>-->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
